# OpenEdTex Enterprise Environment Configuration Template
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# Django Core Settings
DEBUG=False
SECRET_KEY=change-this-to-a-secure-random-key-in-production
ENVIRONMENT=production
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com
LANGUAGE_CODE=en-us
TIME_ZONE=UTC
USE_I18N=True
USE_L10N=True
USE_TZ=True

# Database Configuration
DATABASE_URL=postgresql://openedtex_user:your_secure_password@db:5432/openedtex_prod
DB_NAME=openedtex_prod
DB_USER=openedtex_user
DB_PASSWORD=your_secure_password
DB_HOST=db
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CACHE_URL=redis://redis:6379/1
CELERY_BROKER_URL=redis://redis:6379/2
CELERY_RESULT_BACKEND=redis://redis:6379/2

# External Services
OPENAI_API_KEY=sk-your-openai-api-key
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project_id
SENTRY_ENVIRONMENT=production

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# AWS/Cloud Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=your-cdn-domain.com
AWS_SES_REGION_NAME=us-east-1

# Security Settings
ENCRYPTION_KEY=your-32-character-encryption-key
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=1440
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# SSL Configuration
SSL_CERTIFICATE_PATH=/etc/ssl/certs/certificate.crt
SSL_PRIVATE_KEY_PATH=/etc/ssl/private/certificate.key

# Monitoring & Logging
LOG_LEVEL=INFO
PROMETHEUS_METRICS_ENABLED=True
SENTRY_TRACES_SAMPLE_RATE=1.0

# Payment Configuration (Stripe)
STRIPE_PUBLIC_KEY=pk_live_your-stripe-public-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# File Upload & Storage
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/mediafiles
MAX_UPLOAD_SIZE=104857600
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif,mp4,avi,mov

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com
CORS_ALLOW_CREDENTIALS=True

# Performance Settings
MAX_WORKERS=4
WORKER_TIMEOUT=30
CACHE_TIMEOUT=3600
SESSION_TIMEOUT=86400

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Feature Flags
ENABLE_AI_FEATURES=True
ENABLE_ANALYTICS=True
ENABLE_NOTIFICATIONS=True
ENABLE_CHAT=True
ENABLE_VIDEO_CONFERENCING=True
ENABLE_COLLABORATION=True

# Third-party Integrations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook
ZOOM_API_KEY=your-zoom-api-key
ZOOM_API_SECRET=your-zoom-api-secret
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Backup & Recovery
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# Compliance & Audit
DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=2555
CONSENT_LOG_RETENTION_DAYS=2555
COMPLIANCE_MODE=strict

# Health Checks
HEALTH_CHECK_ENABLED=True
HEALTH_CHECK_DATABASE=True
HEALTH_CHECK_CACHE=True
HEALTH_CHECK_EXTERNAL=True
HEALTH_CHECK_INTERVAL=30

# Load Balancing
LOAD_BALANCER_TYPE=nginx
UPSTREAM_SERVERS=web:8000
HEALTH_CHECK_PATH=/health/

# CDN Configuration
CDN_ENABLED=True
CDN_PROVIDER=cloudflare
CDN_ZONE_ID=your-zone-id
CDN_API_TOKEN=your-api-token

# Security Monitoring
FAIL2BAN_ENABLED=True
MODSECURITY_ENABLED=True
OWASP_ZAP_ENABLED=True

# Container Configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest
KUBERNETES_NAMESPACE=production

# URLs
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com
ADMIN_URL=https://admin.yourdomain.com

# API Configuration
API_VERSION=v1
API_THROTTLE_RATE=1000/hour
API_DOCUMENTATION_ENABLED=True

# Notification Settings
NOTIFICATION_EMAIL_ENABLED=True
NOTIFICATION_SMS_ENABLED=False
NOTIFICATION_PUSH_ENABLED=True

# Analytics Configuration
ANALYTICS_ENABLED=True
ANALYTICS_PROVIDER=mixpanel
ANALYTICS_TOKEN=your-analytics-token

# Support Configuration
SUPPORT_EMAIL=support@yourdomain.com
SUPPORT_PHONE=+1-XXX-XXX-XXXX
SUPPORT_CHAT_ENABLED=True

# Legal & Compliance
PRIVACY_POLICY_URL=https://yourdomain.com/privacy
TERMS_OF_SERVICE_URL=https://yourdomain.com/terms
COOKIE_POLICY_URL=https://yourdomain.com/cookies

# Emergency Contacts
EMERGENCY_CONTACT_NAME=Your Name
EMERGENCY_CONTACT_EMAIL=emergency@yourdomain.com
EMERGENCY_CONTACT_PHONE=+1-XXX-XXX-XXXX

# Security
ENCRYPTION_KEY=your-32-character-encryption-key

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Social Auth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
