# Minimal backend environment example for production
# Replace placeholders with your real values

# Core Django settings
DEBUG=False
SECRET_KEY=use-a-long-random-string

# JWT (DRF SimpleJWT)
JWT_SECRET_KEY=use-a-long-random-string

# Hosts
# Backend public hostname (no scheme)
ALLOWED_HOSTS=api.yourdomain.com

# Frontend origin(s)
FRONTEND_URL=https://school.yourdomain.com
CORS_ALLOWED_ORIGINS=https://school.yourdomain.com,https://go4itacademy.netlify.app
CSRF_TRUSTED_ORIGINS=https://school.yourdomain.com,https://go4itacademy.netlify.app

# Database (example Postgres via env, adjust as needed)
# DATABASE_URL=postgres://user:pass@host:5432/dbname

# Optional email settings for password resets, notifications
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=your-api-key
# EMAIL_PORT=587
# EMAIL_USE_TLS=True

# If serving over HTTPS behind a proxy
# SECURE_PROXY_SSL_HEADER=('HTTP_X_FORWARDED_PROTO', 'https')
# USE_X_FORWARDED_HOST=True